CONFIG_PACKAGE_ppp

DESCRIPTION:=This package contains the PPP (Point-to-Point Protocol) daemon

PKG_NAME:=ppp
PKG_VERSION:=2.4.7
PKG_MINOR:=is missing
PKG_RELEASE:=2

PKG_SOURCE:=$(PKG_NAME)-$(PKG_VERSION).tar.gz
PKG_SOURCE_URL:=ftp://ftp.samba.org/pub/ppp/

PKG_BUILD_DIR:=$(BUILD_DIR)/$(PKG_NAME)-$(BUILD_VARIANT)/$(PKG_NAME)-$(PKG_VERSION)

PKG_LICENSE:=is missing
PKG_LICENSE_FILES:=is missing

DOWNLOAD LINK:=https://download.samba.org/pub/ppp/ppp-2.4.7.tar.gz

LINK:=https://ppp.samba.org


